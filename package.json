{
  "name": "sentify-server",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && yarn start",
    "client-production": "cd client && yarn install && yarn start && cd .. && node server.js",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "heroku-postbuild": "yarn client-production"
  },
  "dependencies": {
    "dotenv": "^5.0.1",
    "ejs": "^2.5.8",
    "express": "^4.16.3",
    "fetch-tweets": "^0.1.7",
    "firebase": "^4.12.1",
    "node-fetch": "^2.1.2",
    "request": "^2.85.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0"
  }
}
